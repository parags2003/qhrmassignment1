@model qhrmassignment.Models.Product

@{
    ViewData["Title"] = "Add New Product";
}

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" />

<div class="container mt-5">
    <h2 class="text-center mb-4">Add New Product</h2>

    <form asp-action="AddProduct" method="post" class="shadow p-4 rounded bg-light">
        <div class="form-group mb-3">
            <label for="Name">Name</label>
            <div class="input-group">
                <div class="input-group-text"><i class="fas fa-tag"></i></div>
                <input type="text" asp-for="Name" class="form-control" placeholder="Enter product name" />
            </div>
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <div class="form-group mb-3">
            <label for="Description">Description</label>
            <div class="input-group">
                <div class="input-group-text"><i class="fas fa-pencil-alt"></i></div>
                <textarea asp-for="Description" class="form-control" rows="3" placeholder="Enter product description"></textarea>
            </div>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>

        <div class="form-group mb-4">
            <label for="Price">Price</label>
            <div class="input-group">
                <div class="input-group-text"><i class="fas fa-dollar-sign"></i></div>
                <input type="number" asp-for="Price" class="form-control" placeholder="Enter product price" step="0.01" />
            </div>
            <span asp-validation-for="Price" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-primary btn-lg w-100">
            <i class="fas fa-plus-circle"></i> Add Product
        </button>
    </form>
</div>

<style>
    body {
        background-color: #f8f9fa;
    }

    .shadow {
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1); 

    .input-group-text {
        background-color: #007bff; 
        color: white; 
    }

    .form-control:focus {
        border-color: #007bff; 
        box-shadow: 0 0 5px rgba(0, 123, 255, 0.5); 
    }

    .btn-primary {
        background-color: #007bff;
        border-color: #007bff; 
    }

    .btn-primary:hover {
        background-color: #0056b3;
    }
</style>
